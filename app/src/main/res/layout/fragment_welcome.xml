<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appIntro.slider.WelcomeFragment"
    android:background="@drawable/gradient_welcome_bg">

    <TextView
        android:id="@+id/welcm_textView"
        style="@style/slider_tile_style"
        android:layout_marginTop="60dp"
        android:text="@string/tracky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tracky_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="14dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_kogo"
        app:layout_constraintBottom_toBottomOf="@id/welcome_next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcm_textView"
        app:layout_constraintVertical_bias="0.142"
        app:shapeAppearanceOverlay="@style/welcomeAppIconStyle"
        app:strokeColor="@color/white"
        app:strokeWidth="8dp" />

    <TextView
        android:id="@+id/welcm_des"
        style="@style/slider_tile_style"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="66dp"
        android:text="Goal or any task tracking\n application to keep your\n consistency regularly and track\n your consistency everyday"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tracky_image"
        app:layout_constraintVertical_bias="0.104" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/welcome_next_btn"
        style="@style/slider_btn_style"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>