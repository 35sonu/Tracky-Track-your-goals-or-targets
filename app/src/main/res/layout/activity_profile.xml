<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1f1ff"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top2c" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile"
            app:civ_border_color="@color/white"
            app:civ_border_width="5dp" />


        <ImageButton
            android:id="@+id/profile_pic_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus" />





    </RelativeLayout>



    <TextView
        android:id="@+id/users_email"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittextbox"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Your Email ID"
        tools:layout_editor_absoluteY="320dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textColorHint="#302F2F"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/editName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/edit" />

        <TextView
            android:id="@+id/users_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbox"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Your Name"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="#302F2F"
            android:textSize="19dp"
            tools:layout_editor_absoluteY="320dp" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/logout_button"
        android:text="Log Out"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PDFshare"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="Share Active Goal PDF"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:onClick="PDF"
        android:background="@drawable/button" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/button"
        android:text="Show Average Consistency"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:onClick="Graph"/>



</LinearLayout>