<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appIntro.slider.LastStepFragment"
    android:background="@drawable/gradient_last_step_bg">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/last_step_text"
        style="@style/slider_tile_style"
        android:text="@string/create_and_go"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="240dp"
        android:layout_height="490dp"
        android:layout_margin="16sp"
        android:src="@drawable/create_and_go"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/last_step_done_btn"
        app:layout_constraintTop_toBottomOf="@id/last_step_text"
        app:shapeAppearanceOverlay="@style/roundedSquareImage"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/last_step_done_btn"
        style="@style/slider_btn_style"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>