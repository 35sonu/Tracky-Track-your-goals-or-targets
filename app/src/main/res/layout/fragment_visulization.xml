<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appIntro.slider.VisulizationFragment"
    android:background="@drawable/gradient_visulization_bg">

    <TextView
        android:id="@+id/visulization_title"
        style="@style/slider_tile_style"
        android:text="@string/visulization"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="230dp"
            android:layout_height="490dp"
            android:layout_margin="16sp"
            android:src="@drawable/dashboard"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/visulization_next_btn"
            app:layout_constraintTop_toBottomOf="@id/visulization_title"
            app:shapeAppearanceOverlay="@style/roundedSquareImage"
            app:strokeWidth="2dp"
            app:strokeColor="@color/blue"
           />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/visulization_next_btn"
        style="@style/slider_btn_style"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>